        size: root.width, root.height  

        Label:
            text: "Rate the Tremor from 0-1 (minor to severe) \n- dominant hand"
            font_size: 34

        Label:
            text: str(round(float(slider_.value), 2))
            font_size: 30

        Slider:
            id: slider_
            min: 0
            max: 1
            step: 0.1
            orientation: "horizontal"
           
        Button:
            text: "Next"
            font_size: 20
            size_hint: 0.2, 0.4
            pos_hint: {"right": 1, "bottom": 1}
            background_color: (0,1,1,0.5)
            on_release:
                app.root.current = "nondom_spiral"

