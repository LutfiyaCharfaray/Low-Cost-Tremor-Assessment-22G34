                    Label:
                        id: non_side_label
                        text:"Left/Right"
                        font_size: 20
                        pos_hint: {"x":0.5, "y": 1}
                        size_hint: 1,0.3
                        color: (0,0,0,1)
        #To show the time it takes to complete drawings       
               
                GridLayout:
                    cols:2
                    Label:
                        text:"Completion time -Dominant hand: "
