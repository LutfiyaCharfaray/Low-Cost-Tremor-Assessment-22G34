    name: "end"
    FloatLayout:
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "blue.jpeg"

        Button:
            text: "Return to Menu"
            font_size: "30"
            size_hint: 0.3, 0.2
