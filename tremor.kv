<VRScreen2>:
    name: "rating2"
    vrs2: slide.value

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height  

        Label:
            text: "Rate the Tremor from 0-1 (minor to severe) \n- nondominant hand"
            font_size: 34

        Label:
            text: str(round(float(slide.value), 2))
            font_size: 30

        Slider:
            id: slide
            min: 0
            max: 1
            step: 0.1
            orientation: "horizontal"
           
        Button:
            text: "Next"
            font_size: 20
            size_hint: 0.2, 0.4
            pos_hint: {"right": 1, "bottom": 1}
            background_color: (0,1,1,0.5)
            on_release:
                app.root.current = "results_1"


<ResultScreen1>:
    vrs1: 0
    vrs2: 0 

    FloatLayout:
        id: export4
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "blue.jpeg"

        GridLayout:
            rows:2
            Label : 
                text: "Results" # Part 1
                size_hint: 1,0.05
                font_size: 25
                underline: True
                bold: True
                color: (0,0,0,1)

        #To show visual ratings for dominant and non-dominant hand drawings        
            

            BoxLayout:
                orientation: "vertical"        
                Label: 
                    text: "Dominant Hand Tremor Visual Rating: {}".format(root.vrs1)
                    font_size: 20
                    color: (0,0,0,1)
                    size_hint: 1, 0.3
                  
                Label: 
                    text: "Non-Dominant Hand Tremor Visual Rating: {}".format(root.vrs2)
                    font_size: 20
                    color: (0,0,0,1)
                    size_hint: 1, 0.2


        #To show similarity index for dominant and non-dominant drawings      
                    
                GridLayout:
                    cols:2
                    size_hint: 1, 0.3
                    Label: 
                        text: "Tremor Index (dominant hand) = " 
                        font_size: 20
                        color: (0,0,0,1)
                        size_hint: 1, 0.3

                    Label:
                        id: sim_label
                        text: "(no tremor:0 - severe tremor:1)"
                        font_size: 20
                        color: (0,0,0,1)
                        size_hint: 1, 0.3

                GridLayout:
                    cols:2
                    size_hint: 1, 0.2
                    Label: 
                        text: "Tremor Index (non-dominant hand) = " 
                        font_size: 20
                        color: (0,0,0,1)
                        size_hint: 1, 0.3
                        
                    Label:
                        id: sim_label2
                        text: "(no tremor:0 - severe tremor:1)"
                        font_size: 20
                        color: (0,0,0,1)
                        size_hint: 1, 0.3  
                        
                Button:
                    id: ssim_dh
                    text: "Tremor Index" 
                    font_size: 20               
                    size_hint: 0.2, 0.1
                    pos_hint: {"x":0.4, "y": 1}
                    background_color: (0,1,1,0.5)
                    on_press: root.simIndex()
  
                Button:
                    id: save
                    text: "Next"
                    font_size: 20
                    size_hint: 0.3, 0.2
                    pos_hint: {"x":0.7, "y": 0.5}
                    background_color: (0,1,1,1)
                    on_press: root.capture()
                    on_release:
                        app.root.current = "results2"
                        sim_label.text= "(no tremor:0 - severe tremor:1)"   
                        sim_label2.text= "(no tremor:0 - severe tremor:1)"   

