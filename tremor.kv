            background_color: (0,1,1,1) #0,1,1,0.5
            on_release:
                app.root.current = "prac"
                root.manager.transition.direction = "right"

        Button: 
            id: 'screenshot'
            text: "Save Drawing"
            pos_hint: {"right": 0.8, "bottom": 1}
            font_size: 20
            size_hint: 0.2, 0.1
            color: (1,1,1,1)
            background_color: (0,1,1,1)
            on_release: root.capture()

        Button:
            id: 'next'
            text: "Next"
            font_size: 20
            size_hint: 0.2, 0.1
            pos_hint: {"right": 1, "bottom": 1}
            background_color: (0,1,1,1)
            on_release:
