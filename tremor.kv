<TickBox>:
    name: "tick"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            Color:
                rgb:1,1,1
    FloatLayout:

        Label:
            text: "Dominant Hand"
            font_size: 30
            bold: True
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'y':0.45}
        FloatLayout:
            cols: 4   
            Label:
                text: "Left"
                font_size: 25
                color: (0,0,0,1)
                bold: True
                pos_hint: {'x': 0.1 , 'y' : 0.5}
                size_hint: (0.2, 0.1)
            CheckBox:
                on_active: root.checkbox_click(self,self.active)
                pos_hint: {'x': 0.17 , 'y' : 0.5}
                size_hint: (0.3, 0.1)
                bold: True
                color: (0,0,0,1)
                width: 0.9
                font_size: 30 
            Label:
                text: "Right"
                font_size: 25
                bold: True
                color: (0,0,0,1)
                pos_hint: {'x': 0.6 , 'y' : 0.5}
                size_hint: (0.2, 0.1)
            CheckBox:
                on_active: root.checkbox_click(self,self.active)
                pos_hint: {'x': 0.67 , 'y' : 0.5}
                size_hint: (0.3, 0.1)
                bold: True
                #color: 1,1,1,1
                color: (0,0,0,1)
                width: 0.9
                font_size: 30
        Button:
            text: "Next"
            pos_hint: {'x': 0.75 , 'y' : 0.03}
            size_hint: (0.2, 0.1)
            background_color: (0,1,1,1)
            on_release:
                app.root.current = "dom_spiral"
                root.manager.transition.direction = "left"

