                GridLayout:
                    cols:2
                    Label:
                        text:"Completion time -Non-dominant hand: "
                        font_size: 20
                        color: (0,0,0,1)
                       
                    Label:
                        id:time_results2
                        text:"Time in seconds"
                        font_size: 20
                        color: (0,0,0,1)

        #To show 5 time taken compared to a normal drawing
                GridLayout:
                    cols:2
                    Label:
                        text:"Time % -Dominant hand:"
                        font_size: 20
                        color: (0,0,0,1)
                       
                    Label:
                        id:time_percentage_results
                        text:"Percentage time"
                        font_size: 20
                        color: (0,0,0,1)

                GridLayout:
                    cols:2
                    Label:
                        text:"Time % -Non-dominant hand:"
                        font_size: 20
                        color: (0,0,0,1)
                       
                    Label:
                        id:time_percentage_results2
                        text:"Percentage time"
                        font_size: 20
                        color: (0,0,0,1)
                  
                Button:
                    id: save2
                    text: "Save and proceed"
                    font_size: 20
                    size_hint: 0.3, 0.5
                    pos_hint: {"x":0.7, "y": 0.5}
                    background_color: (0,1,1,1)
                    on_press: root.capture()
                    on_release:
                        app.root.current = "end" #"result3"         

